#!/usr/bin/bash

#set forceueberzug
set shell "/usr/bin/bash"


preview my_epub .epub {{
    epub_image="/tmp/gnome_epub_$(date +%9N).png"
    a="$((w*h))"
    [[ "${a}" -gt 500 ]] && a="500"
    gnome-epub-thumbnailer -s "${a}" "${f}" "${epub_image}"
    setup_image
    send_image "${epub_image}"
}}

preview mygzip .gz {{
    zcat "${f}"
}}

preview pygm .log {{
    pygmentize "${f}"
}}

preview myjs .js .json .html {{
    highlight "${f}" --stdout --out-format="ansi"
}}

preview mylua .lua {{
    highlight "${f}" --stdout --out-format="ansi"
}}

