$BM       c            $BORD1 ;         [class="konqueror"]             scratchpad show
$BM       d                             exec        	dmenu_run -b -nb "#000000" -l 10 -fn "Office Code Pro:pixelsize=20:antialias=true:autohint=true"
$BM       e 	                        layout      	toggle   split
$BM       f	                        mode        	"mousemove"
$BM       g	                        exec        	gnome-screenshot
