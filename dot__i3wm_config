$BM       u            $BORD1 ;    	[instance="i3s_st"]             scratchpad show
$BM       v                             split v
$BM       w                             layout      	tabbed
$BM       y                             mode            freekey
$BM       Return                        exec 		                 	/usr/local/bin/st
$BM       period                        gaps        	inner    all     toggle $IN_GAPS,\
                                        gaps 		top 	 all     toggle $TOP_GAPS,\
                                        gaps 		bottom	 all	 toggle $BOTTOM_GAPS,\
                                        gaps   		left  	 all	 toggle	$LEFT_GAPS,\
                                        gaps   		right 	 all	 toggle	$RIGHT_GAPS
$BM       Super_L                       exec            konqueror --open-session "maximilian"
