$BindM_Sh      t		  	  $BORD1;    	            exec 		 	$HOME/.local/opt/tor-browser_en-US/Browser/start-tor-browser; exec sleep 1 && i3-msg '[class="Tor Browser"] scratchpad show'
$BindM_Sh      u		  	  $BORD1;    	            exec 		 	/usr/local/bin/st -n i3wm_scratchpad_st
$BindM_Sh      v         		     	                split h
