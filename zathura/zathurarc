
#---------------------------------------#
#----SETTINGS---------------------------#
#---------------------------------------#
    set zoom-step               4
    set show-hidden             true
    set continuous-hist-save    true
    set window-title-basename   true
    set selection-clipboard     clipboard
    set adjust-open             best-fit
    set pages-per-row           1
    set window-title-home-tilde true
    set statusbar-home-tilde    true
    set n-completion-items      -1
        # set sandbox strict
#---------------------------------------#
#----MAPPINGS----------------UNSET------#
#---------------------------------------#
    unmap =
#---------------------------------------#
#----MAPPINGS----------------CTRL-------#
#---------------------------------------#
    map  <C-h>   toggle_statusbar
    map  <C-->   zoom out
    map  <C-=>   zoom in
    map  <C-_>   adjust_window best-fit
    map  <C-+>   adjust_window width
#---------------------------------------#
#----MAPPINGS----------------COMMA------#
#---------------------------------------#
    map  ,h     toggle_statusbar
#---------------------------------------#
#----MAPPINGS----------------REGULAR----#
#---------------------------------------#
    map  b      recolor
    map  =      zoom in
#---------------------------------------#
#---APPEARANCE--------------------------#
#---------------------------------------#
    set font                "Agave regular 12"
    set recolor-keephue     true
    set statusbar-h-padding 10
    set statusbar-v-padding 10
    set statusbar-bg        "#222222"
    set statusbar-fg        "#00AA00"
    set highlight-fg        "#000000"
    set highlight-color     "#F5D769"
